{% extends 'content.html.twig' %}

{% block title %}nouvelle Utilisateur{% endblock %}

{% block table %}


{{ form_start(registrationForm) }}
<div class="container-fluid">
    <div class="row m-4">
        <div class="col-md-6">
            {{ form_row(registrationForm.email) }}
        </div>
        <div class="col-md-6">
            {{ form_row(registrationForm.pseudo) }}
        </div>
    </div>
    <div class="row m-4">
        <div class="col-md-6">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>
        <div class="col-md-3">
            {{ form_row(registrationForm.roles) }}
        </div>
        <div class="col-md-3">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>
    </div>
    <div class="row m-4">
        <div class="col">
            <button type="submit" class="btn btn-success btn-sm">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
</div>
{{ form_end(registrationForm) }}

{% endblock %}

{% block widget %}
    <a href="{{ path('app_user_index') }}" class="btn btn-dark btn-sm"><i class="fas fa-fw fa-arrow-left mr-2"></i>Retour</a>
{% endblock %}

